@model DoAnLapTrinhWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="margin-top: 50px;">
        <div class="login" style="height: 700px;">
            <div class="container">
                <h1>Đăng ký</h1>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })<br />
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Tên", @class = "form-control" })<br />
                @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "form-control" })<br />
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Xác nhận mật khẩu", @class = "form-control" })<br />
                @Html.TextBoxFor(m => m.PhoneNumber, new { placeholder = "Số điện thoại", @class = "form-control" })<br />
                @Html.TextBoxFor(m => m.Address, new { placeholder = "Địa chỉ", @class = "form-control" })<br />
                <input type="submit" value="Đăng ký" class="button-log" />
            </div>
        </div>
        <div class="register" style="height: 700px;">
            <div class="container">
                <i class="fas fa-user fa-5x"></i>
                <h2>Xin chào!</h2>
                <p>Nếu bạn đã có tài khoản, hãy đăn nhập ở phía bên dưới</p>
                @Html.ActionLink("Đăng nhập", "Login", "Account", new { @class = "btn-custom" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
