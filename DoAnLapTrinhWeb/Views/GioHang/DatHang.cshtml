
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content" style="margin-top: 50px;">
    <div class="shopping-cart-gh" style="margin-top:50px;">
        <div class="product-gh" style="height:50px;">
            <label class="product-gh-image">Hình ảnh</label>
            <label class="product-gh-details">Tên</label>
            <label class="product-gh-price">Giá</label>
            <label class="product-gh-quantity">Số lượng</label>
            <label class="product-gh-line-price">Tổng</label>
        </div>
        @foreach (var item in Model)
        {
            <div class="product-gh">
                <div class="product-gh-image">
                    <img src="~/HinhSanPham/@item.sAnh">
                </div>
                <div class="product-gh-details">
                    <div class="product-gh-title">@item.sTensp</div>
                </div>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { id = item.iIdsanpham }))
                {
                    <div class="product-gh-price">@String.Format("{0:0,0}", item.dDongia)</div>
                    <div class="product-gh-quantity">
                        @item.iSoluong
                    </div>
                }
                <div class="product-gh-line-price">@String.Format("{0:0,0}", item.dThanhtien) </div>
            </div>
        }



        <div class="totals">
            <a href="@Url.Action("GioHang","GioHang")" class="btn btn-danger"> Trở lại giỏ hàng </a>
            <div class="totals-item">
                <label>Tổng số lượng</label>
                <div class="totals-value" id="cart-subtotal"> @ViewBag.TongSoLuong </div>
                <label>Tổng tiền</label>
                <div class="totals-value" id="cart-subtotal">@String.Format("{0:0,0}", ViewBag.TongTien) VNĐ </div>
            </div>
        </div>
    </div>


    @using BikeShopv2.Models
    <h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
    @{
        AspNetUser kh = (AspNetUser)Session["Taikhoan"];
    }
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Họ tên khách hàng:</td>
                <td style="font-weight:bold">  @kh.Name </td>
            </tr>
            <tr style="height:40px">
                <td> Địa chỉ:</td>
                <td style="font-weight:bold">  @kh.Address </td>
            </tr>
            <tr style="height:40px">
                <td> Địện thoại:</td>
                <td style="font-weight:bold">  @kh.PhoneNumber </td>
            </tr>

            <tr style="height:40px">
                <td> Ngày đặt:</td>
                <td style="font-weight:bold"> @DateTime.Now.ToShortDateString() </td>
            </tr>
            <tr style="height:40px">
                <td> Ngày giao hàng:</td>
                <td style="font-weight:bold">
                    <input type="date" name="NgayGiao" />
                </td>
            </tr>

            <tr style="height:40px">
                <td></td>
                <td>
                    <input class="btn btn-success bottom-right" type="Submit" value="ĐỒNG Ý ĐẶT HÀNG" />
                </td>
            </tr>
        }
    </table>

</div>


