@model IEnumerable<DoAnLapTrinhWeb.Models.ChiTietDonHang>

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">CHI TIẾT ĐƠN HÀNG</h2>

<table class="table">
    <tr>
        <th>
            Mã sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.ID_SANPHAM)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
            </td>
            <th>
                <img width="200" src="~/HinhSanPham/@item.SANPHAM.Anh" />
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Quay lại", "DonDatHang", null, new {@class="btn btn-default"})
</div>
