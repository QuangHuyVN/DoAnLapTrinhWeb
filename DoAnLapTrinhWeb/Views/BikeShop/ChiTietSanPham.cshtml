@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container body-content" style="margin-top: 50px; margin-bottom:50px;">
    <div class="row">

        <div class="grid product">
            <div class="col-xs-12 col-md-7">
                <div class="product-image">
                    <img src="~/HinhSanPham/@Model.Anh">
                </div>
            </div>
            <div class="col-xs-12 col-md-5">
                <h1>@Model.TenSP</h1>
                <h2>Giá bán: @Model.GiaBan VNĐ</h2>
                <div class="description">
                    <div id="log">
                        @Html.Raw(Model.MoTa)
                    </div>

                </div>
                <a class="btn btn-default btn-success" href="@Url.Action("ThemGioHang", "GioHang", new { id = @Model.ID_SANPHAM , strURL= Request.Url.ToString() })">Thêm giỏ hàng</a>

            </div>
        </div>
        <div class="container text-center">
            @Html.Raw(Model.NoiDung)
        </div>
    </div>
</div>

@section scripts{
    <script>
var $log = $( "#log" ),
  str = m,
  html = $.parseHTML( str ),
  nodeNames = [];

// Append the parsed HTML
$log.append( html );

// Gather the parsed HTML's node names
$.each( html, function( i, el ) {
  nodeNames[ i ] = "<li>" + el.nodeName + "</li>";
});

// Insert the node names
$log.append( "<h3>Node Names:</h3>" );
$( "<ol></ol>" )
  .append( nodeNames.join( "" ) )
  .appendTo( $log );
    </script>
}


